
@model VPC
@{
    ViewData["Title"] = "OnePayPayment";
    
}

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <form asp-controller="GioHang" asp-action="OnePayPayment" method="post">
                <div class="col-md-4">
                    <!-- Billing Details -->
                    <div class="billing-details">
                        <div class="section-title">
                            <h3 class="title">THÔNG TIN ĐƠN HÀNG</h3>
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="vpc_Customer_Name" placeholder="Name" required>
                        </div>
                        <div class="form-group">
                            <input class="input" type="email" name="vpc_Customer_Email" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="vpc_Customer_Address" placeholder="Address" required>
                        </div>
                        <div class="form-group">
                            <input class="input" type="tel" name="vpc_Customer_Phone" placeholder="Telephone" required>
                        </div>
                        <button type="submit" class="primary-btn order-submit">Xác Nhận</button>
                    </div>
                    <!-- /Billing Details -->
                </div>

            </form>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
