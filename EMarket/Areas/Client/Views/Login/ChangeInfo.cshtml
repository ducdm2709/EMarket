@model EMarket.Areas.Admin.Models.ThongTinTaiKhoan
@{
    ViewData["Title"] = "ChangeInfo";
}

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <form asp-controller="Login" asp-action="ChangeInfo">
                <div class="col-md-8">
                    <!-- Billing Details -->
                    <div class="billing-details">
                        <div class="section-title">
                            <h3 class="title">THÔNG TIN TÀI KHOẢN</h3>
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" asp-for="HoVaTen" placeholder="Name" required>
                        </div>
                        <div class="form-group">
                            <input class="input" asp-for="NgaySinh" required>
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" asp-for="Sdt" placeholder="Address" required>
                        </div>
                        <div class="form-group">
                            <input class="input" type="tel" asp-for="DiaChi" placeholder="Telephone" required>
                        </div>
                        <div class="form-group">
                            <input class="input" type="hidden" asp-for="TaiKhoanId" value="@Model.TaiKhoanId">
                        </div> 
                        <div class="form-group">
                            <input class="input" type="hidden" asp-for="ThongTinTaiKhoanId" value="@Model.ThongTinTaiKhoanId" >
                        </div>
                    </div>
                    <!-- /Billing Details -->
                </div>
                <button type="submit" class="primary-btn order-submit">Xác Nhận</button>
            </form>
            <!-- /Order Details -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>