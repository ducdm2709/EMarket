@model IEnumerable<EMarket.Areas.Admin.Models.Loai>
@{
    Layout = null;
}

    <!-- aside Widget -->
 <div class="aside">
    <h3 class="aside-title">Loại Hàng Hóa</h3>
    <ul>
        <li class="active" style="margin-bottom:8px;"><a asp-controller="HangHoa" asp-action="Index">Home</a></li>

        @foreach (var x in Model)
        {
            <div style="margin-bottom:8px;">
                <li><a asp-controller="HangHoa" asp-action="Index" asp-route-loai="@x.LoaiId" asp-route-nhacc="@ViewData["NhaCungCapID"]">@x.TenLoai</a></li>
            </div>
        }
    </ul>
</div>
