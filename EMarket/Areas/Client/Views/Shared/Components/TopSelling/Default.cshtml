@model IEnumerable<EMarket.Areas.Admin.Models.HangHoa>
@{
    Layout = null;
}

<div class="aside">
    <h3 class="aside-title">Top selling</h3>
    @foreach (var x in Model)
    {
    <div class="product-widget">
        <div class="product-img">
            <img src="~/img/@x.Hinh" alt="">
        </div>
        <div class="product-body">
            <p class="product-category">@x.Loai.TenLoai</p>
            <h3 class="product-name"><a asp-controller="HangHoa" asp-action="Details" asp-route-id="@x.HangHoaId" asp-route-loai="@x.TenLoaiSeoUrl" asp-route-url="@x.TenHhSeoUrl">@x.TenHangHoa</a></h3>
            <h4 class="product-price">@x.Gia$ <!--del class="product-old-price">$990.00</!--del--></h4>
        </div>
    </div>
    }
</div>

