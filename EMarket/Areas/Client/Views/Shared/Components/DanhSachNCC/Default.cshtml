@model IEnumerable<EMarket.Areas.Admin.Models.NhaCungCap>
@{
    Layout = null;
}
<div class="aside">
    <h3 class="aside-title">Nhà Cung Cấp</h3>
    <ul>
        <li class="active" style="margin-bottom:8px;"><a asp-controller="HangHoa" asp-action="Index">None</a></li>

        @foreach (var x in Model)
        {
            <div style="margin-bottom:8px;">
                <li><a asp-controller="HangHoa" asp-action="Index" asp-route-nhacc="@x.NhaCungCapId" asp-route-loai="@ViewData["LoaiID"]">@x.TenNhaCungCap</a></li>
            </div>
        }
    </ul>
</div>
