@model IEnumerable<EMarket.Areas.Admin.Models.KhoHang>

@{
    ViewData["Title"] = "Index";
}

<h2>Kho Hàng</h2>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="card-header">Danh Sách Kho</h5>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SoLuong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HangHoa.TenHangHoa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HangHoa.Hinh)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HangHoa.TenHangHoa)
                                </td>
                                <td>
                                    <img height="auto" width="150" src="~/img/@Html.DisplayFor(modelItem => item.HangHoa.Hinh)" />
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.KhoHangId"><i class="fas fa-edit"></i></a> |
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.KhoHangId"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>   
</div>
<a class="btn btn-success float-right" asp-action="Create"><i class="fas fa-plus-square"></i></a>