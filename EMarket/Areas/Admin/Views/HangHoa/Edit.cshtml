@model EMarket.Areas.Admin.Models.HangHoa

@{
    ViewData["Title"] = "Hàng Hóa";
}

<h2>Sửa Hàng Hóa</h2>

<h4>Hàng Hóa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HangHoaId" />
            <div class="form-group">
                <label asp-for="TenHangHoa" class="control-label"></label>
                <input asp-for="TenHangHoa" class="form-control" />
                <span asp-validation-for="TenHangHoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhaCungCapId" class="control-label"></label>
                <select asp-for="NhaCungCapId" class="form-control" asp-items="ViewBag.NhaCungCapId"></select>
                <span asp-validation-for="NhaCungCapId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiId" class="control-label"></label>
                <select asp-for="LoaiId" class="form-control" asp-items="ViewBag.LoaiId"></select>
                <span asp-validation-for="LoaiId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label"></label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hinh" class="control-label"></label>
                <input type="file" asp-for="Hinh"/>
                <span asp-validation-for="Hinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <textarea asp-for="MoTa" class="form-control" multiple ></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light">Back to list</a>
</div>

