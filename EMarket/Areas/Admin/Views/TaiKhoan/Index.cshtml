@model IEnumerable<EMarket.Areas.Admin.Models.TaiKhoan>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayDk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiTaiKhoan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDk)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiTaiKhoan)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.TaiKhoanId"><i class="fas fa-edit"></i></a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.TaiKhoanId"><i class="fas fa-info"></i></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TaiKhoanId"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a class="btn btn-success float-right" asp-action="Create"><i class="fas fa-plus-square"></i></a>
